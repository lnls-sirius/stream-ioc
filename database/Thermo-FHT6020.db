# Thermo-FHT6020.db

# Record definition file for one Thermo Fisher Scientific FHT 6020 controller.

# Each record defined below has the following parameters:
#
# PORT - Name of the port configured in asynDriver.
#
# PREFIX - Prefix name for all PVs associated with the device.

# Gamma

record(ai, "$(PREFIX):Gamma") {
    field(DESC, "Gamma")
    field(DTYP, "stream")
    field(EGU, "uSv/h")
    field(INP, "@Thermo-FHT6020.proto getGamma $(PORT)")
    field(PINI, "YES")
    field(PREC, "3")
    field(SCAN, "1 second")
    field(MDEL, "-1")
}

